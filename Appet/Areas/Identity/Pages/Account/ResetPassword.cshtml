@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<header class="mt-24">
    <h1 class="text-2xl font-bold text-center text-gray-900">@ViewData["Title"]</h1>
    <h2 class="text-center text-gray-700 mb-6">Reset your password.</h2>
    <hr class="my-4" />
    <div class="flex justify-center">
        <div class="w-full max-w-sm">
            <form method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />

                <div>
                    <input asp-for="Input.Email" class="block w-full border border-gray-300 py-2 text-gray-900" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="sr-only"></label>
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>

                <div>
                    <input asp-for="Input.Password" class="block w-full border border-gray-300 py-2 text-gray-900" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password" class="sr-only"></label>
                    <span asp-validation-for="Input.Password" class="text-red-500"></span>
                </div>

                <div>
                    <input asp-for="Input.ConfirmPassword" class="block w-full border border-gray-300 py-2 text-gray-900" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-red-500"></span>
                </div>

                <button type="submit" class="flex w-full justify-center bg-sky-600 px-3 py-2 text-sm font-semibold leading-6 text-white hover:bg-sky-500">
                    Reset
                </button>
            </form>
        </div>
    </div>
</header>
