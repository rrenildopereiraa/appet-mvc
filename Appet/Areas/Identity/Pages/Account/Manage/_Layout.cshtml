@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Areas/Identity/Pages/_Layout.cshtml";
    }
}

<div class="sm:mx-auto sm:w-full sm:max-w-7xl px-4 py-6">
    <h1 class="text-3xl font-bold text-center text-gray-900">Manage your account</h1>

    <div class="mt-8">
        <h2 class="text-xl font-semibold text-gray-700">Change your account settings</h2>
        <hr class="mt-4 mb-6 border-gray-200" />

        <div class="flex flex-col md:flex-row">
            <div class="md:w-1/4 md:pr-4 mb-8 md:mb-0">
                <partial name="_ManageNav" />
            </div>

            <div class="md:w-3/4">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
