@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="text-2xl font-bold text-center text-gray-900">@ViewData["Title"]</h2>
    <partial name="_StatusMessage" for="StatusMessage" />

    <form id="email-form" method="post" class="mt-6">
        <div asp-validation-summary="All" class="text-red-500" role="alert"></div>

        @if (Model.IsEmailConfirmed)
        {
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700">Email</label>
                <input asp-for="Email" class="block w-full border border-gray-300 py-2 px-3 text-gray-900" placeholder="Please enter your email." disabled />
                <span class="h-10 flex items-center justify-center text-success font-bold">✓</span>
            </div>
        }
        else
        {
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-semibold text-gray-700">Email</label>
                <input asp-for="Email" class="block w-full border border-gray-300 py-2 px-3 text-gray-900" placeholder="Please enter your email." disabled />
                <span class="text-blue-500">
                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="underline">Send verification email</button>
                </span>
            </div>
        }

        <div class="mb-4">
            <label asp-for="Input.NewEmail" class="block text-sm font-semibold text-gray-700">New Email</label>
            <input asp-for="Input.NewEmail" class="block w-full border border-gray-300 py-2 px-3 text-gray-900" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
            <span asp-validation-for="Input.NewEmail" class="text-red-500"></span>
        </div>

        <div class="mt-6">
            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="w-full flex justify-center bg-sky-600 px-3 py-2 text-sm font-semibold text-white hover:bg-sky-500">
                Change email
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
