@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        <img class="mx-auto h-10 w-auto" src="https://github.com/rrenildopereiraa/appet/raw/master/icon.ico" alt="Appet">
        <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Log in to your account</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        <form id="account" method="post" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>

            <div>
                <label for="email" class="block text-sm font-semibold leading-6 text-gray-900">Email address</label>
                <div class="mt-2">
                    <input class="block w-full border border-gray-300 py-2 text-gray-900" asp-for="Input.Email" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
            </div>

            <div>
                <label for="password" class="block text-sm font-semibold leading-6 text-gray-900">Password</label>
                <div class="mt-2">
                    <input class="block w-full border border-gray-300 py-2 text-gray-900" asp-for="Input.Password" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-red-500"></span>
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input id="remember-me" asp-for="Input.RememberMe" type="checkbox" class="h-4 w-4 text-sky-600 border-gray-300 rounded">
                    <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>

                <div class="text-sm">
                    <a class="font-semibold text-sky-600 hover:text-sky-500" asp-page="./ForgotPassword">Forgot your password?</a>
                </div>
            </div>

            <div>
                <button id="login-submit" type="submit"
                        class="flex w-full justify-center bg-sky-600 px-3 py-2 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600">
                    Log in
                </button>
            </div>

            <div class="text-sm text-center">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="font-semibold text-sky-600 hover:text-sky-500">Register as a new user</a>
            </div>

            <div class="text-sm text-center">
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="font-semibold text-sky-600 hover:text-sky-500">Resend email confirmation</a>
            </div>
        </form>
    </div>
</div>
