@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<header class="mt-24">
    <h1 class="text-2xl font-bold text-center text-gray-900">@ViewData["Title"]</h1>
    <h2 class="text-center text-gray-700 mb-6">Enter your email.</h2>
    <div class="flex justify-center">
        <div class="w-full max-w-sm">
            <form method="post" class="space-y-6">
                <div asp-validation-summary="ModelOnly" class="text-red-500" role="alert"></div>
                <div>
                    <input asp-for="Input.Email" class="block w-full border border-gray-300 py-2 text-gray-900" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="sr-only"></label>
                    <span asp-validation-for="Input.Email" class="text-red-500"></span>
                </div>
                <button type="submit"
                        class="flex w-full justify-center bg-sky-600 px-3 py-2 text-sm font-semibold leading-6 text-white hover:bg-sky-500">
                    Reset Password
                </button>
            </form>
        </div>
    </div>
</header>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
