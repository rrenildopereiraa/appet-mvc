@model List<Animal>
@{
}

<div class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14">
    <div class="mx-auto max-w-2xl">
        <div class="text-center">
            <h2 class="text-xl font-bold text-gray-800 sm:text-3xl mb-5">All Animals</h2>
        </div>

        <div class="mb-5 flex justify-between">
            @if (User.IsInRole("Admin"))
            {
                <a class="inline-flex items-center justify-center gap-x-2 border border-transparent bg-sky-600 px-4 py-3 text-sm font-semibold text-white hover:bg-sky-700" asp-controller="Animals" asp-action="Create">Create new animal</a>
            }
        </div>

        <div class="relative z-10">
            <div class="flex flex-col">
                <div class="-m-1.5 overflow-x-auto">
                    <div class="p-1.5 min-w-full inline-block align-middle">
                        <div class="overflow-hidden border border-gray-200 bg-white">
                            <table class="min-w-full divide-y divide-gray-200">
                                <thead class="bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-6 py-3 text-start text-xs font-semibold text-gray-500 uppercase">ID</th>
                                        <th scope="col" class="px-6 py-3 text-start text-xs font-semibold text-gray-500 uppercase">Name</th>
                                        <th scope="col" class="px-6 py-3 text-start text-xs font-semibold text-gray-500 uppercase">Species</th>
                                        <th scope="col" class="px-6 py-3 text-start text-xs font-semibold text-gray-500 uppercase">Owner</th>
                                        <th scope="col" class="px-6 py-3 text-end text-xs font-semibold text-gray-500 uppercase">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var animal in Model)
                                    {
                                        <tr>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@animal.Id</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-800">@animal.Name</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@animal.Species</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">@animal.Owner</td>
                                            <td class="px-6 py-4 whitespace-nowrap text-end text-sm font-semibold">
                                                <a class="inline-flex items-center justify-center gap-x-2 border border-transparent text-blue-600 hover:text-blue-800 px-4 py-2 text-sm font-semibold" asp-controller="Animals" asp-action="Edit" asp-route-id="@animal.Id">Edit</a>
                                                <a class="inline-flex items-center justify-center gap-x-2 border border-transparent text-red-600 hover:text-red-800 px-4 py-2 text-sm font-semibold" onclick="return confirm('Are you absolutely sure you want to remove @animal.Name?')" asp-controller="Animals" asp-action="Delete" asp-route-id="@animal.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
