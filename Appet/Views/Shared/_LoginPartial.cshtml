@using Microsoft.AspNetCore.Identity
@using Appet.Models

@inject SignInManager<AppetUser> SignInManager
@inject UserManager<AppetUser> UserManager

<ul class="flex items-center space-x-4">
@if (SignInManager.IsSignedIn(User))
{
    <li>
        <a id="manage" class="text-black hover:text-gray-600 font-medium" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"> Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li>
        <form id="logoutForm" method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold bg-white border border-gray-200 text-black hover:bg-gray-100">Logout</button>
        </form>
    </li>
}
else
{
    <li>
        <a class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold bg-white border border-gray-200 text-black hover:bg-gray-100" 
           id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    <li>
        <a class="py-2 px-3 inline-flex items-center gap-x-2 text-sm font-semibold border border-transparent bg-sky-400 text-white hover:bg-sky-500" 
           id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
}
</ul>
